@model Bangazon.Models.OrderViewModels.OrderDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.DateCreated)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.DateCreated)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.DateCompleted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.DateCompleted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.User.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.PaymentType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.PaymentType.AccountNumber)
        </dd>
    </dl>
    <dl>
        <h5>Products</h5>
        @if(Model.LineItems != null){
        @foreach (var product in Model.LineItems)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => product.Product.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => product.Product.Title)
            </dd>
            <button asp-action="EDIT" asp-route-id="@Model.Order.OrderId">Remove Product</button>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => product.Units)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => product.Units)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => product.Cost)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => product.Cost)
            </dd>
        }
        }

    </dl>
</div>
<div>
    @try
    {
        <a asp-action="CompletePayment" asp-route-id="@Model.Order.OrderId">Complete Payment</a>
        <a asp-action="Index">Back to List</a>
    }
    catch
    {
        <a asp-action="Index">Back to List</a>
    }


</div>
