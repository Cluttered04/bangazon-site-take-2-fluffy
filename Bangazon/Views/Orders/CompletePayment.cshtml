@model Bangazon.Models.OrderViewModels.OrderPaymentViewModel

@{
    ViewData["Title"] = "CompletePayment";
}

@*Complete payment view to allow users to purchase all the items in their order - Authored by Sable Bowen*@
<h1>Complete Payment</h1>
<hr />
<form asp-action="CompletePayment" enctype="multipart/form-data">

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Order.DateCreated)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Order.DateCreated)
    </dd>
    <div class="form-group">
        <label class="control-label">Payments</label>
        <select asp-for="Order.PaymentTypeId" asp-items="@Model.PaymentTypes"></select>
    </div>
    </dl>
<div class="form-group">
    <input type="submit" value="CompletePayment" class="btn btn-primary" />
</div>
</form>


